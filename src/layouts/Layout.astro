---
interface Props {
	title: string;
}

const { title } = Astro.props;
import '@/styles/globals.css'
import Header from '@/components/v1/landing/header.astro';
import Footer from '@/components/v1/landing/footer.astro';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="A starter template for AstroJS landing & Auth page with tailwindcss, typescript, shadcn ui" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="antialiased">
		<div class="flex flex-col min-h-[100dvh]">
			<Header />
			<main class="flex-1">
				<slot />
			</main>
			<Footer />
		</div>
	</body>
</html>
